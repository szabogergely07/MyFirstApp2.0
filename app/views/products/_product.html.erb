
  <div class="container clearfix col-xs-12 col-md-6 product-unit">
    <% cache product do %>
    <div><%= image_tag product.image_url, class: "img-responsive product-pic" %>
    </div>
    <%= link_to product do %>
      <div class="product-describe">
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <p><%= product.price %></p>
      </div>
    <% end %>
    <div class="container">
      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
    <% end %>
  </div> <!-- end pruduct-unit -->
