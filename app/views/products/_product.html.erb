<div class="container clearfix col-xs-12 col-md-6 product-unit">
  <div><%= image_tag product.image_url, class: "img-responsive product-pic img-zoom", data_zoom_image: product.image_url %></div>
  <div class="product-describe">
    <h3><%= product.name %></h3>
    <p><%= product.description %></p>
    <p><%= product.color %></p>
    <p><%= product.price %></p>
  </div>

  <div class="container">
  <%= link_to 'Show', product %>
  <%= link_to 'Edit', edit_product_path(product) %>
  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div> <!-- end pruduct-unit -->