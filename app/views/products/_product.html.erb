<div class="container clearfix col-xs-12 col-md-6 product-unit">
        <div><%= image_tag product.image_url, :class => "img-responsive product-pic" %></div>
        <div class="product-describe"><h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <p>$<%= product.price %></p>
        </div>
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div> <!-- end pruduct-unit -->